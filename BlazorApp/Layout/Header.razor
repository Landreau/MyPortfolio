@inject NavigationManager Navigation

<div id="header">
    <a href="/" target="_top" class="@GetActiveClass("#home")">Home</a>
    <a href="#about" target="_top" class="@GetActiveClass("#about")">About</a>
    <a href="#portfolio" target="_top" class="@GetActiveClass("#portfolio")">Portfolio</a>
    <a href="#contact" target="_top" class="@GetActiveClass("#contact")">Contact</a>
</div>

@code {
    private string GetActiveClass(string href)
    {
        return Navigation.Uri.Contains(href.TrimStart('#'), StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}